// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  userid      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  phoneNumber BigInt
  address String
}


model Staff {
  userid                 Int    @id @default(autoincrement())
  name                   String
  email                  String @unique
  phoneNumber            BigInt
  address                String
  designation            String
  shopId                 Int
}


model Shop {
  shopId                 Int    @id @default(autoincrement())
  GRPNAM                 String
  CUSNAM                 String
  ADRONE                 String
  ADRTWO                 String
  ADRTHR                 String
  ADRFOU                 String
  PLC                    String
  PINCOD                 String
  CNTPER                 String
  SLNO                   String
  TNGST                  String
  TELNUM                 String
  ZONNAM                 String
}

model LoginAuth {
  Id                     Int    @id @default(autoincrement())
  name                   String
  email                  String @unique
  password               String
}



model Product {
  ID                Int      @id @default(autoincrement())
  CNAME             String
  NAME              String
  MRP               String    // Assuming MRP can have decimal values
  PPRICE            String    // Assuming product price can have decimal values
  SPRICE            String    // Assuming selling price can have decimal values
  GST               String    // Assuming GST can have decimal values
  HSN               String
  CESSP             String    // Assuming CESSP can have decimal values
  CMCODE            String
  FITEC             String
  FQTY              String
  FREE              String
  DISCP             String    // Assuming discount percentage can have decimal values
}


model Company {
  id                    Int     @id @default(autoincrement())
  cName                 String
  cShort                String
}

model Customer {
  customerId             Int    @id @default(autoincrement())
  customerName           String
  customerType           String
  customerAddress        String
  customerPhoneNumber    BigInt
  shopId                 Int
  ladtOrder              DateTime
  pendingBalance         Int
}


model Supplier {
  id                     Int      @id @default(autoincrement())
  supplierName           String
  shopId                 Int
  // products
}


model Invoice {
  invoiceNumber         Int       @id
  productId             Int
  productQuantity       Int
  currentPrice          Int
  invoiceDate           DateTime
  shopId                Int
  total                 Int
}


model Bill {
  billNumber           Int        @id
  invoiceNumber        Int
  // Invoice table
  paymentMode          String
  pendingPayment       Int
  billDate             DateTime
}


model Delivery {
  billNumber           Int        @id
  staffId              Int
  area                 String
  status               String
}