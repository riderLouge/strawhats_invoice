// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Staff {
  userid                 Int    @id @default(autoincrement())
  name                   String
  email                  String @unique
  phoneNumber            BigInt
  address                String
  designation            String
  role                   String
  shopId                 Int
  photo                  String
}


model Shop {
  shopId                 Int    @id @default(autoincrement()) @unique
  GRPNAM                 String
  CUSNAM                 String
  ADRONE                 String
  ADRTWO                 String
  ADRTHR                 String
  ADRFOU                 String
  PLC                    String
  PINCOD                 String
  CNTPER                 String
  SLNO                   String
  TNGST                  String
  TELNUM                 String
  ZONNAM                 String
}

model LoginAuth {
  Id                     Int    @id @default(autoincrement())
  name                   String
  role                   String
  email                  String @unique
  password               String
  
}  


model Product {
  ID                Int      @id @default(autoincrement())
  CNAME             String
  NAME              String
  MRP               String   
  PPRICE            String    
  SPRICE            String    
  GST               String    
  HSN               String
  CESSP             String    
  CMCODE            String
  FITEC             String
  FQTY              String
  FREE              String
  DISCP             String    
}

model StockAdjust {
  ID          Int      @id @default(autoincrement())
  productID   Int    
  FQTY        String
  Reason      String
  DQTY        String
}

model Company {
  id                    Int     @id @default(autoincrement())
  cName                 String
  cShort                String
}

model Customer {
  customerId             Int    @id @default(autoincrement())
  customerName           String
  customerType           String
  customerAddress        String
  customerPhoneNumber    BigInt
  shopId                 Int
  ladtOrder              DateTime
  pendingBalance         Int
}




model Invoice {
  invoiceNumber         Int       @id
  products              Json[]
  currentPrice          Int
  invoiceDate           DateTime
  shopId                Int
}

model CreditDebit {
  invoiceNumber         Int       @id
  invoiceDate           DateTime
  shopId                Int
  status                String
  pending               Int
}

model SupplierBill {
  billNumber           Int        @id
  billTotal            Int
  paymentMode          String
  pendingPayment       Int
  billDate             DateTime
  billedProducts       Json[]
}


model Delivery {
  id                   Int        @id
  billNumbers          Int[]        
  date                 DateTime
  staffId              Int
  area                 String
  status               String
}